schema {
    query: Query
    mutation: Mutation
}

type Attendee {
    id: String!
    name: String!
    checkIn: String
    finishGame: Boolean!
    records: [Record!]
}

type Booth {
    id: String!
    name: String!
    token: String!
}


type Record {
    attendee: Attendee
    booth: Booth
    createTime: String
}

type Query {
    ping: String!
    attendees(id: String): [Attendee!]
    booths(token: String): [Booth!]
}

input AttendeeIDInput {
    id: String!
}

input BoothIDInput {
    id: String!
}

input AddAttendeeInput {
    id: String!
    name: String!
}

type Mutation {
    checkInAttendee(attendee: AttendeeIDInput!): Attendee!
    addRecord(attendee: AttendeeIDInput!, booth: BoothIDInput!): Record
    finishGame(attendee: AttendeeIDInput!): Attendee!
    addAttendee(attendee: AddAttendeeInput!): Attendee!
}
